{{!< default}}

<div class="gh-page">
    <div class="gh-container">

        {{#tag}}
        <header class="mb-10">
            <h1 class="font-semibold text-3xl lowercase dark:text-slate-200">
            {{plural ../pagination.total empty='posts' singular='% post' plural='% posts'}} tagged <span class="lowercase">#{{name}}</span>
            </h1>
        </header>
        {{/tag}}

        <div >
        {{#foreach posts}}

            {{> "card"}} {{!-- partials/card.hbs --}}

        {{/foreach}}
        </div>

    </div>
</div>
